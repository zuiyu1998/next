    "version": "2.0.0",
    "tasks": [
        {
            "label": "debug",
            "type": "shell",
            "command": "cargo run"
        },
        {
            "label": "database init",
            "type": "shell",
            "command": "sudo service postgresql start && ./wsl_update_hosts.sh"
        },
        {
            "label": "database up",
            "type": "shell",
            "command": "cd ./migration && cargo run -- up"
        },
        {
            "label": "database down",
            "type": "shell",
            "command": "cd ./migration && cargo run -- down"
        }
    ]
}